		--C <= (-- primeiro mux_8_1
		--      16 => '1', 17 => '1', 18 => '0',
		      
		      -- segundo mux_8_1
		--      19 => '0', 20 => '0', 21 => '1',
		      
		      -- terceiro mux_8_1
		--      22 => '1', 23 => '0', 24 => '1',
		      
		--      others => '0');
		--wait for 1ns;
		
		--data_in <= "00011000";
		--wait for 0.5ns;
		--C <= (-- primeiro mux_8_1
		--      16 => '0', 17 => '1', 18 => '1',
		      
		      -- segundo mux_8_1
		--      19 => '1', 20 => '1', 21 => '1',
		      
		      -- terceiro mux_8_1
		--      22 => '0', 23 => '0',  24 => '0',
		      
		--      others => '0');
		--wait for 1ns;
		
		-- VERIFICA OPERÇÕES
		-- R7 = R0 + R1
		data_in <= "00000000";
		wait for 0.1ns;
    C <= (
          7 => '1',
          15 => '1',
          
          -- primeiro mux_8_1
		      18 => '0', 17 => '1', 16 => '1',
		      
		      -- segundo mux_8_1
		      21 => '0', 20 => '0', 19 => '1',
		      
		      -- terceiro mux_8_1
