		      25 => '0', 26 => '0',
		      
		      -- código operação ULA 2
		      27 => '0', 28 => '1',
		      
		      others => '0'
		     );
		
		wait for 1ns;
		
		-- R5 = R3 AND (NOT R1)
		data_in <= "00000000";
		wait for 0.1ns;
    C <= (
          5 => '1',
          13 => '1',
          -- primeiro mux_8_1
		      18 => '0', 17 => '1', 16 => '1',
		      
