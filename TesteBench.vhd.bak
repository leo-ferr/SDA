		-- R4 = R2 OR R7
		data_in <= "00000000";
		wait for 0.1ns;
    C <= (
          4 => '1',
          12 => '1',
          -- primeiro mux_8_1
		      18 => '0', 17 => '1', 16 => '1',
		      
		      -- segundo mux_8_1
		      21 => '0', 20 => '1', 19 => '0',
		      
		      -- terceiro mux_8_1
