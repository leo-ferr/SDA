		      -- código operação ULA 2
		      27 => '0', 28 => '0',
		      
		      others => '0'
		     );
		     
		wait for 1ns;
		
		-- R6 = R1 << 1
		data_in <= "00000000";
		wait for 0.1ns;
    C <= (
          6 => '1',
          14 => '1',
          
          -- primeiro mux_8_1
		      18 => '0', 17 => '0', 16 => '0',
		      
		      -- segundo mux_8_1
		      21 => '0', 20 => '0', 19 => '1',
		      
		      -- terceiro mux_8_1
		      24 => '0', 23 => '0',  22 => '0',
		      
