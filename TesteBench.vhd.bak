		wait for 0.5ns;
		C <= (13 => '1', others => '0');
		wait for 1ns;
		
		data_in <= "11000011";
		wait for 0.5ns;
		C <= (14 => '1', others => '0');
		wait for 1ns;
		
		data_in <= "01101101";
		wait for 0.5ns;
		C <= (15 => '1', others => '0');
		wait for 1ns;
		
		
		-- VERIFICA SAIDA DOS MUX_8_1
		--data_in <= "00011100";
